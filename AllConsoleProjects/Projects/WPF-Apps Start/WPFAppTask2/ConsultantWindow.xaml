<Window x:Class="WPFAppTask2.ConsultantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAppTask2"
        mc:Ignorable="d"
        Title="Консультант банка ''A''"
        MinHeight="450"
        MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbClientsList"
                  HorizontalAlignment="Left"
                  Margin="10,10,0,0"
                  VerticalAlignment="Top"
                  Width="190" 
                  DropDownOpened="cmbClientsList_DropDownOpened"
                  Height="22"
                  DropDownClosed="cmbClientsList_DropDownClosed">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding FirstName}"                                   
                                   Background="White"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock
            Margin="61,41,39,0"
            TextWrapping="Wrap"
            Text="Клиент Банка"
            VerticalAlignment="Top"
            Height="35"
            FontFamily="Times New Roman"
            FontSize="24"
            Grid.Column="1"
            TextAlignment="Center"/>
        <ListBox x:Name="lbxClientData"
            Grid.Column="1"            
            Margin="10,150,10,0"
            Height="160"
            VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Word}" FontFamily="Times New Roman" FontSize="16" TextAlignment="Center"/>                       
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="btnChangePhone"
            Grid.Column="1"
            Content="Изменить номер"
            Margin="110,336,110,0"
            VerticalAlignment="Top"
            Height="40"
            Click="btnChangePhone_Click"
            Visibility="Hidden"/>
        <TextBox x:Name="tbxNewPhone"
            Grid.Column="2"
            Margin="40,50,40,0"
            TextWrapping="Wrap"
            Text="Введите номер..."
            VerticalAlignment="Top"
            Height="26"
            FontSize="18"
            FontFamily="Times New Roman"
            Visibility="Hidden" 
            GotFocus="tbxNewPhone_GotFocus"/>
        <Button x:Name="btnConfirm"
            Grid.Column="2"
            Content="Подтвердить"
            Margin="65,90,65,0"
            VerticalAlignment="Top"
            Height="35"
            Visibility="Hidden"
            Click="btnConfirm_Click"/>
        <Button x:Name="btnLeave" 
            Grid.Column="2"
            Content="Выйти"
            Margin="65,356,65,0"
            VerticalAlignment="Top"            
            Height="30"
            Visibility="Visible"
            Click="btnLeave_Click"/>
        <Button x:Name="btnSaveLeave" 
            Grid.Column="2"
            Content="Сохранить и выйти"
            Margin="65,356,65,0"
            VerticalAlignment="Top"            
            Height="30"
            Click="btnSaveLeave_Click"
            Visibility="Hidden"/>

    </Grid>
</Window>
