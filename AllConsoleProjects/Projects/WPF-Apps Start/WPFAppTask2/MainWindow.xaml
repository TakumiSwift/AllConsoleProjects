<Window x:Class="WPFAppTask2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAppTask2"
        mc:Ignorable="d"
        Title="Программа Банка ''A''"
        Height="500"
        Width="715"
        MinHeight="500"
        MinWidth="715"
        MaxHeight="500"
        MaxWidth="715">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="265*"/>
            <RowDefinition Height="219*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Выберите тип Аккаунта ниже"
                   Width="356"
                   TextAlignment="Center"
                   Padding="30"
                   FontFamily="Times New Roman"
                   FontSize="20"
                   Margin="0,159,0,26"/>
        <StackPanel Margin="0,265,0,0" Grid.RowSpan="2" Orientation="Horizontal">
            <Button x:Name="btnConsultant"
                Content="Консультант"
                Height="50"
                Width="140"
                FontFamily="Times New Roman"
                FontSize="16"
                Margin="50" Click="btnConsultant_Click"/>
            <Button x:Name="btnManager"
                Content="Менеджер"
                Height="50"
                Width="140"
                FontFamily="Times New Roman"
                FontSize="16"
                Margin="50"
                Click="btnManager_Click"/>
            <Button x:Name="btnAdministrator"
                Content="Администратор"
                Height="50"
                Width="140"
                FontFamily="Times New Roman"
                FontSize="16"
                Margin="50"/>
        </StackPanel>
    </Grid>
</Window>
