<Window x:Class="WPFTask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTask1"
        mc:Ignorable="d"
        Title="Программа разделения предложения на слова и т.д."
        Height="450"
        Width="800"
        MinWidth="800"
        MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock HorizontalAlignment="Center"
                   Margin="0,24,0,0"
                   Padding="5"
                   TextWrapping="Wrap"
                   Text="Введите исходное предложение  ниже"
                   VerticalAlignment="Top"
                   Background="#FF585858"
                   Foreground="White"
                   Height="30"
                   Width="312"
                   TextAlignment="Center"/>
        
        <TextBox x:Name="textBoxSentence"
                 HorizontalAlignment="Center"
                 Margin="0,88,0,0"
                 TextWrapping="Wrap"
                 Text="Начните ввод предложения..."
                 VerticalAlignment="Top"
                 Width="312"
                 Height="129"
                 TextAlignment="Center" 
                 GotFocus="textBoxSentence_GotFocus"/>
        
        <Button x:Name="btnSplitWords"
                Content="Разделить"
                HorizontalAlignment="Center"
                Margin="0,243,0,0"
                VerticalAlignment="Top"
                Height="50"
                Width="132"
                Click="btnSplitWords_Click"/>
        
        <Button x:Name="btnMixWords"
        Content="Переставить слова"
        HorizontalAlignment="Center"
        Margin="0,305,0,0"
        VerticalAlignment="Top"
        Height="50"
        Width="132" Click="btnMixWords_Click"/>

        <ListBox x:Name="listBoxWords"
                 Grid.Column="1"                 
                 Margin="24,10,24,0" Height="207"
                 VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Word}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
                 
        
        <Label x:Name="labelReversedSentence"
               Grid.Column="1"
               Content="...Тут будет ваше отраженное предложение..."
               HorizontalAlignment="Center"
               Margin="0,222,0,0"
               VerticalAlignment="Top"
               Height="202"
               Width="352"/>

    </Grid>
</Window>
